# Copy this file to .env and set values for production
# Example .env keys used by settings.py

# Django
DJANGO_SECRET_KEY=replace-with-a-secure-random-key
DJANGO_DEBUG=0  # 0 or 1
DJANGO_ALLOWED_HOSTS=example.com,www.example.com  # comma-separated list

# Database (optional - if DB_ENGINE is empty sqlite will be used)
DB_ENGINE=django.db.backends.mysql
DB_NAME=your_db
DB_USER=your_user
DB_PASSWORD=your_password
DB_HOST=your_db_host
DB_PORT=3306

# Notes:
# - Do NOT commit .env with real secrets to source control.
# - Use your hosting platform's secret management (Railway, Heroku, Azure, etc.)
